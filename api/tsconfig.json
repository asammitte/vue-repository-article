{
  "include": ["src/**/*"],
  "extends": "@tsconfig/node16/tsconfig.json",
  "exclude": ["node_modules"],
  "compilerOptions": {
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "strict": true,
    "skipLibCheck": true,
    "target": "ES2016",
    "module": "CommonJS",
    "rootDir": "./",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": [
      "@types/node",
      "node"
    ]
  }
}
